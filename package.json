{
  "name": "@eesha/root",
  "version": "1.0.0",
  "description": "Eesha Silks E-commerce - Monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "mobile": "npm run start --workspace=@eesha/mobile",
    "mobile:android": "npm run android --workspace=@eesha/mobile",
    "mobile:ios": "npm run ios --workspace=@eesha/mobile",
    "mobile:build:android": "npm run build:android --workspace=@eesha/mobile",
    "mobile:build:ios": "npm run build:ios --workspace=@eesha/mobile",

    "admin": "npm run dev --workspace=@eesha/admin",
    "admin:build": "npm run build --workspace=@eesha/admin",
    "admin:start": "npm run start --workspace=@eesha/admin",

    "shared:typecheck": "npm run typecheck --workspace=@eesha/shared",

    "dev": "concurrently \"npm run mobile\" \"npm run admin\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/.next packages/*/dist",
    "clean:install": "npm run clean && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ecommerce",
    "react-native",
    "nextjs",
    "monorepo",
    "expo",
    "supabase"
  ],
  "author": "Eesha Silks",
  "license": "MIT"
}
